{
  "name": "cubiculo-digital-v3",
  "private": true,
  "engines": {
    "node": "20.x",
    "pnpm": "10.28.1"
  },
  "scripts": {
    "preinstall": "corepack enable",
    "build:api": "pnpm --filter @cubiculo/api build",
    "build:web": "pnpm --filter @cubiculo/web build",
    "build": "pnpm run build:api && pnpm run build:web",

    "start": "node apps/api/dist/index.js"
  },
  "dependencies": {
    "next": "15.1.7",
    "react": "19.2.3",
    "react-dom": "19.2.3",
    "graphql": "^16.8.1",
    "graphql-yoga": "^5.7.0",
    "@envelop/core": "^5.5.0"
  },
  "devDependencies": {
    "typescript": "^5",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "concurrently": "^8.2.0",
    "tailwindcss": "^4",
    "@tailwindcss/postcss": "^4",
    "ts-node": "^10.9.1"
  },
  "packageManager": "pnpm@10.28.1"
}
