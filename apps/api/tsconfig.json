{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022"],
    "module": "NodeNext",
    "moduleResolution": "NodeNext",

    "strict": true,
    "skipLibCheck": true,

    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    "types": ["node"],
    "rootDir": "src",
    "outDir": "dist",

    "baseUrl": ".",
    "paths": {
      "@cubiculo/db": ["../../packages/db/dist"]
    }
  },
  "include": ["src"]
}
